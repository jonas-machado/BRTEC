// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id              Int          @id @default(autoincrement())
  name            String
  image           String?
  backgroundImage String?
  role            UserRole     @default(USER)
  sector          String?
  email           String       @unique
  emailVerified   DateTime     @default(now())
  hashedPassword  String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  sessions        Session[]
  accounts        Account[]
  configured      Configured[]
  post            Post[]
}

model Account {
  id                 Int       @id @default(autoincrement())
  userId             Int
  providerType       String
  providerId         String
  providerAccountId  String
  refreshToken       String?
  accessToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([providerId, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       Int
  expires      DateTime
  sessionToken String   @unique
  accessToken  String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Olt {
  id        Int      @id @default(autoincrement())
  olt       String
  vlan      Int?
  ip        String   @unique
  brand     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Configured {
  id         Int      @id @default(autoincrement())
  userId     Int
  serial     String   @unique
  onuType    String?
  olt        String
  pon        String
  idLivre    String
  idOnu      String?
  customVlan String?
  cliente    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
}

model NeutralNetwork {
  id      Int    @id @default(autoincrement())
  company String
  link    String
}

model Firmware {
  id      Int    @id @default(autoincrement())
  company String
  model   String
  link    String
  version String
}

model Solutions {
  id    Int    @id @default(autoincrement())
  title String
  text  String
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}
